@model IEnumerable<WebBanHang.Models.HangHoa>
@{
    ViewData["Title"] = "_SearchPartial";
}

<h2>Results</h2>

<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
               Image
            </th>
            
            <th>
               Prize
            </th>
            <th>
                Amount
            </th>
            <th>
               Brand
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHH)
                </td>
                <td>
                    <img src="~/Hinh/@item.Hinh" width="50" height="50" />
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loai.TenLoai)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaHH"><i class="fa fa-edit"></a> |
                    <a asp-action="Details" asp-route-id="@item.MaHH"><i class="fa fa-align-left"></a> |
                    <a asp-action="Delete" asp-route-id="@item.MaHH"><i class="fa fa-trash-o"></a>
                </td>
            </tr>
        }
    </tbody>
</table>