@model ReflectionIT.Mvc.Paging.IPagingList<WebBanHang.Models.HangHoa>

@using ReflectionIT.Mvc.Paging
@addTagHelper *,ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/Components/_AdminPage.cshtml";
}

<h2>Products</h2>
<nav aria-label="Products Paging">
    @await this.Component.InvokeAsync("Pager",new {pagingList= this.Model })
</nav>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name Product
            </th>
            <th>
               Image
            </th>
            <th>
                Prize
            </th>
            <th>
               Discount
            </th>
            <th>
                Amount
            </th>
            <th>
                Brand
            </th>
            <th>
                Posting day
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenHH)
            </td>
            <td>
                <img src="~/Hinh/@item.Hinh" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia) $
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiamGia)%
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loai.TenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDang)
            </td>
            <td style='font-size:24px'>
                <a asp-action="Edit" asp-route-id="@item.MaHH"><i class="fa fa-edit"></a> |
                <a asp-action="Details" asp-route-id="@item.MaHH"><i class="fa fa-align-left"></a> |
                <a asp-action="Delete" asp-route-id="@item.MaHH"><i class="fa fa-trash-o"></a>
            </td>
        </tr>
}
    </tbody>
</table>
