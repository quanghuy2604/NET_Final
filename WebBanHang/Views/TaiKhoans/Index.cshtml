@model IEnumerable<WebBanHang.Models.AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Components/_AdminPage.cshtml";
}

<h2>Accounts</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td style='font-size:24px'>
                <a asp-action="Edit" asp-route-id="@item.Id" ><i class="fa fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-align-left"></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o"></a>
            </td>
        </tr>
}
    </tbody>
</table>
