@model IEnumerable<WebBanHang.Models.Contact>

@{
    ViewData["Title"] = "Index";
    // Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/Components/_AdminPage.cshtml";
}

<h2>Contacts</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td style='font-size:24px'>
                <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></a> |
                <a asp-action="Details" asp-route-id="@item.ID"><i class="fa fa-align-left"></a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-trash-o"></a>
            </td>
        </tr>
}
    </tbody>
</table>
