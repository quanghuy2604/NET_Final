
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout_Sanpham.cshtml";
}
@ViewData["Message"];

<div id="page-content" class="single-page">
    <div class="container">
        <h2>Cart</h2>
        <div class="row">
            <div class="col-sm-8">
                @using (Html.BeginForm("Update", "Cart", FormMethod.Post))
                {

                    @foreach (var item in ViewBag.cart)
                    {
                        <div class="row">
                            <div class="product well">
                                <div class="col-md-3">
                                    <div class="image">
                                        <img src="~/Hinh/@item.Product.Hinh" width="150" height="150" />
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="caption">
                                        <div class="name"><h3><a asp-action="Details" asp-controller="TrangChus" asp-route-mahh="@item.Product.MaHH">@item.Product.TenHH</a></h3></div>

                                        <div>@item.Product.DonGia $</div>
                                        <div>Discount :<span>@item.Product.GiamGia%</span></div>
                                        <label>Amount: </label> <input name="quantity" class="form-inline quantity" value="@item.Quantity" asp-route-id="@item.Product.MaHH">
                                        <hr>
                                        <a asp-action="remove" asp-controller="cart" asp-route-id="@item.Product.MaHH" class="btn btn-danger">Remove</a>
                                    </div>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    }

                }
            </div>
            <div class="col-sm-4">
                <div class="product well">
                    <div>
                        <table>
                            <h6>Bill Details</h6>
                            <tr>
                                <td>Total prize  :</td>
                                <td>
                                    <strong> @(ViewBag.gia) USD</strong>

                                </td>
                            </tr>
                            <tr>
                                <td>Discount  : -</td>
                                <td>
                                    <strong>@(ViewBag.giamgia) USD</strong>
                                </td>
                            </tr>
                            <tr>
                                <td>Transport  :</td>
                                <td>Free ship  </td>
                            </tr>
                            <tr style="border-top: 1px solid #333">
                                <td><h5>Totals  : </h5></td>
                                <td><strong><h5> @(ViewBag.total) USD </h5></strong></td>
                            </tr>
                        </table>


                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-8 ">
                <center><a asp-action="ThanhToan" class="btn btn-success" style="font-size:36px">Pay</a></center>
            </div>
        </div>
    </div>
       
</div>


