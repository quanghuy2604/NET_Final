
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/Layout_Sanpham.cshtml";
}
@ViewData["Message"];
@model WebBanHang.Models.AppUser



@using (Html.BeginForm("ThanhToan", "Cart", FormMethod.Post))
{


    <div class="container">
        <div class="heading"><h2>Payment Information</h2></div>
        <form name="form2" id="ff2" method="post" action="register.php">
            <div class="form-group">
                <input name="shipName" class="form-control" value="@ViewBag.username" placeholder="Name :" required>
            </div>

            <div class="form-group">
                <input name="address" class="form-control" value="@ViewBag.address" placeholder="Address :" required>
            </div>
            <div class="form-group">
                <input class="form-control" value="@ViewBag.Email" placeholder="Please add email in your profile" required>
            </div>
            <div class="form-group">
                <input class="form-control" value="@ViewBag.phoneNumber" placeholder="Please add phonenumber in your profile" required>
            </div>
            <br /><br />
            <br />
            <br />
            <br />
            <br />

            <h4>Select another payment method</h4>
            <br />
            <br />
            <br />
            <br />
            <div style="margin:10px">
                <button type="submit" class="btn btn-success" style="font-size:30px">Confirm</button>
                <a asp-action="ThanhToanVnPay">
                    <img src="~/Hinh/vn-pay.jpg" alt="VNPay" width="150" />
                </a>
                <a asp-action="ThanhToanPaypal">
                    <img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/checkout-logo-large.png" alt="Check out with PayPal" />
                </a>
            </div>
            <br />
            <br />
            <br />
        </form>


    </div>

}
