@model IEnumerable<WebBanHang.Models.HangHoa>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/Layout_Sanpham.cshtml";
}



<h3><a asp-action="TimKiem" asp-controller="TrangChus">Search product by prize</a></h3>

<br/>
<h2>Search</h2>

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading"><h2>Products </h2></div>
                <div class="products">


                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="product" style="width:270px;height:280px">
                                <div class="image" >
                                    <a asp-action="Details" asp-route-mahh="@item.MaHH"> <img style="margin:auto" src="~/Hinh/@item.Hinh" width="250" height="250" alt="@item.Loai.TenLoai Product @item.MaHH" /></a>
                                </div>


                                <div>
                                    <a class="btn btn-success" asp-action="buy" asp-controller="cart" asp-route-id="@item.MaHH"><span class="glyphicon glyphicon-shopping-cart">Add to cart</span></a>
                                </div>
                                <div class="caption">
                                    <div class="name"><h3 style="font-size:16px"><a>  @Html.DisplayFor(modelItem => item.TenHH)</a></h3></div>
                                    <div>@Html.DisplayFor(modelItem => item.DonGia) $<span>@Html.DisplayFor(modelItem => item.GiamGia) %</span></div>

                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

</div>