@using Microsoft.AspNetCore.Identity
@using WebBanHang.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Free Bootstrap Themes by 365Bootstrap dot com - Free Responsive Html5 Templates">
    <meta name="author" content="http://www.365bootstrap.com">

    <title>@ViewData["Title"]</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
    <link rel="shortcut icon" href="~/img/icon.png" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css">


    <!-- Custom Fonts -->
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/fonts/font-slider.css" type="text/css">

    <!-- jQuery and Modernizr-->
    <script src="~/js/jquery-2.1.1.js"></script>

    <!-- Core JavaScript Files -->
    <script src="~/js/bootstrap.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WXECE65Z38"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-WXECE65Z38');
    </script>

</head>

<body>


    <h1 style="visibility: hidden">Yéni Shop</h1>

    <!--Top-->
    <nav id="top">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                </div>
                <div class="col-xs-6">
                    <ul class="top-link">
                        <ul class="nav navbar-nav navbar-right">
                            
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <a asp-controller="TrangChus" asp-action="Create">
                                        <span class="glyphicon glyphicon-user"></span> Register
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="TrangChus" asp-action="Login">
                                        <span class="glyphicon glyphicon-log-in"></span> Log In
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Admin" asp-action="Profile">
                                        Hello ,
                                        <b>@User.Identity.Name</b>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="TrangChus" asp-action="Logout">
                                        <span class="glyphicon glyphicon-log-in"></span> Log Out
                                    </a>
                                </li>
                            }
                        </ul>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!--Header-->
    <header class="container">
        <div class="row">

            <div class="col-md-8">
                <form class="form-search">
                    <input type="text" name="query">
                    <button asp-action="Search" asp-controller="TrangChus" type="submit" class="btn btn-primary"><span class="fa fa-search"></span></button>
                </form>
            </div>

            <div class="col-md-4">
                @if(ViewBag.quantity==null)
                {
                    ViewBag.quantity = 0;
                }
                <div id="cart"><a class="btn btn-success" asp-action="index" asp-controller="cart"><span style="font-size:36px" class="glyphicon glyphicon-shopping-cart"><sup>@ViewBag.quantity</sup></span>  </a></div>
            </div>
        </div>
        
    </header>
    <!--Navigation-->
    <nav id="menu" class="navbar"  style="background-color:#ff6666">
        <div class="container">
            <div class="navbar-header">
                <span id="heading" class="visible-xs">Categories</span>
                <button type="button" class="btn btn-navbar navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse"><i class="fa fa-bars"></i></button>
            </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-action="Index">Home</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products</a>
                        <div class="dropdown-menu">
                            <div class="dropdown-inner">
                                <ul class="list-unstyled">
                                    <li>
                                        @foreach (var item in ViewBag.model)
                                        {
                                            <a asp-action="Showsp" asp-controller="TrangChus" asp-route-maloai="@item.MaLoai" > @item.TenLoai</a>
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Shop</a>
                        <div class="dropdown-menu">
                            <div class="dropdown-inner">
                                <ul class="list-unstyled">

                                    <a asp-action="GioiThieu" asp-controller="TrangChus"> Introduce</a>
                                    <a asp-action="DieuKhoan" asp-controller="TrangChus"> Provision</a>
                                    <a asp-action="ChinhSach" asp-controller="TrangChus"> Policy and Service</a>

                                </ul>
                            </div>
                        </div>
                    </li>
                    <li>
                        <a asp-action="showbaiviet" asp-controller="TrangChus">News - Events</a>


                    </li>
                    <li><a asp-action="Contact" asp-controller="TrangChus">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!--//////////////////////////////////////////////////-->
    <!--///////////////////HomePage///////////////////////-->
    <!--//////////////////////////////////////////////////-->

    <div id="result"></div>

    <div id="page-content" class="home-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Carousel -->
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators hidden-xs">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="3"></li>

                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/img/29.jpg" alt="First slide" />
                                <!-- Static Header -->
                                <div class="header-text hidden-xs">
                                    <div class="col-md-12 text-center">
                                    </div>
                                </div><!-- /header-text -->
                            </div>
                            <div class="item">
                                <img src="~/img/30.jpg" alt="Second slide">
                                <!-- Static Header -->
                                <div class="header-text hidden-xs">
                                    <div class="col-md-12 text-center">
                                    </div>
                                </div><!-- /header-text -->
                            </div>
                            <div class="item">
                                <img src="~/img/31.jpg" alt="Third slide">
                                <!-- Static Header -->
                                <div class="header-text hidden-xs">
                                    <div class="col-md-12 text-center">
                                    </div>
                                </div><!-- /header-text -->
                            </div>
                            <div class="item">
                                <img src="~/img/32.jpg" alt="Third slide">
                                <!-- Static Header -->
                                <div class="header-text hidden-xs">
                                    <div class="col-md-12 text-center">
                                    </div>
                                </div><!-- /header-text -->
                            </div>
                        </div>
                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div><!-- /carousel -->
                </div>
            </div>
            <div class="row">
                <div class="banner">
                    <div class="col-sm-4">
                        <img src="~/img/banner1.jpg" height="300" width="400" alt="First banner"/>
                    </div>
                    <div class="col-sm-4">
                        <img src="~/img/banner2.jpg" height="300" width="400" alt="Second banner"/>
                    </div>
                    <div class="col-sm-4">
                        <img  src="~/img/banner3.jpg" height="300" width="400" alt="Third banner"/>
                    </div>
                </div>
            </div>
            @RenderBody()

        </div>
    </div>
    <footer>
        <div class="container">
            <div class="wrap-footer">
                <div class="row">
                    <div class="col-md-3 col-footer footer-1">
                        <img src="~/img/29.jpg" alt="Logo Supreme"/>
                        <p>Supreme</p>
                    </div>
                    <div class="col-md-3 col-footer footer-2">
                        <div class="heading"><h4>Customer service</h4></div>
                        <ul>
                            <li><a href="#">About us</a></li>
                            <li><a href="#">Information</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Terms and conditions</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-footer footer-3">
                        <div class="heading"><h4>Connect us</h4></div>
                        <ul>
                            <li><a href="#">News</a></li>
                            <li><a href="#">Brand</a></li>
                            <li><a href="#">Discount</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-footer footer-4">
                        <div class="heading"><h4>Contact</h4></div>
                        <ul>
                            <li><span class="glyphicon glyphicon-home"></span>Ho Chi Minh, Viet Nam</li>
                            <li><span class="glyphicon glyphicon-earphone"></span>+84 606060 8888</li>
                            <li><span class="glyphicon glyphicon-envelope"></span>yenishop@gmail.com</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        Yéni Shop - From 2020
                    </div>
                    <div class="col-md-6">
                        <div class="pull-right">
                            <ul>
                                <li><img src="images/visa-curved-32px.png" alt="Visa icon"/></li>
                                <li><img src="images/paypal-curved-32px.png" alt="Paypal icon"/></li>
                                <li><img src="images/discover-curved-32px.png" alt="Discover icon"/></li>
                                <li><img src="images/maestro-curved-32px.png" alt="Maestro icon"/></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>

