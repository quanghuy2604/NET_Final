@{
    ViewData["Title"] = "Add Address";
    Layout = "~/Views/Shared/Layout_3.cshtml";
}
@model WebBanHang.ViewModels.AddressViewModel

<div id="page-content" class="single-page">
    <div class="container">

        <div class="row">
            <div class="col-md-6">
                <div class="heading"><h2>Add Phone Number</h2></div>
                <form asp-action="Address" method="post">

                    <div class="form-group">
                        <label asp-for="Street" class="control-label">Street:</label>
                        <input asp-for="Street" class="form-control" required type="text" />
                        <span asp-validation-for="Street" class="textdanger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ward" class="control-label">Ward:</label>
                        <input asp-for="Ward" class="form-control" required  type="text"/>
                        <span asp-validation-for="Ward" class="textdanger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="District" class="control-label">District :</label>
                        <input asp-for="District" class="form-control" required type="text" />
                        <span asp-validation-for="District" class="textdanger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Provincial" class="control-label">City , provincial:</label>
                        <input asp-for="Provincial" class="form-control" required type="text"/>
                        <span asp-validation-for="Provincial" class="textdanger"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="textdanger"></div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btndefault" />
                    </div>
                    <a asp-action="ManageAccount" class="btn-link">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
